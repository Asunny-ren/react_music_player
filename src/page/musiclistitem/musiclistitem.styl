.component-MusicListItem
  position relative
  height 36px
  line-height 36px
  border-bottom 1px solid #ddd
  text-indent 10px
  cursor pointer
  .delete
    position absolute
    float right
    cursor pointer
    height 20px
    width 20px
    top 9px
    transform rotate(45deg)
    right 20px
    &::before, &::after
      content ''
      display block
      background #666
      position absolute
    &::before
      width 100%
      height 1px
      top 10px
      left 0
    &::after
      height 100%
      width 1px
      left 10px
      top 0
  &.focus
    color #2f9842
.component-MusicListItem:hover
  background #eee